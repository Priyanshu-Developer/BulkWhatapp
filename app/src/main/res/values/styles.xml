<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="CustomButton">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="CustomButton">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@color/whatsapp_green</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>